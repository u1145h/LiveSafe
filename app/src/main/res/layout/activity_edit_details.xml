<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditDetails"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/img_1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:backgroundTint="@color/BlackSPL"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:text="@string/textView_EditDetails"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/phone"
                    android:textSize="17sp"
                    android:hint="New Emergency No"
                    android:inputType="phone"
                    android:textColor="@color/BlackSPL"
                    android:background="@drawable/input_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/update"
                android:background="@drawable/roundtnwhite"
                android:onClick="update"
                android:text="Save"
                android:textColor="@color/BlackSPL"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>