<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetails">

    <ImageView
        android:id="@+id/audHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/signup_header"/>

    <TextView
        android:id="@+id/textView"
        android:text="ABOUT"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/lLayout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_below="@id/audHeader"
        android:orientation="vertical"
        android:padding="30dp">


        <TextView
            android:id="@+id/name"
            android:text="Name"
            android:textColor="@color/text"
            android:textSize="27dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView"/>


        <TextView
            android:id="@+id/textView_name"
            android:hint="name"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textAlignment="viewStart"
            android:background="@drawable/input_background"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/name"/>


        <TextView
            android:id="@+id/user_id"
            android:text="User ID"
            android:textColor="@color/text"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView_name"/>



        <TextView
            android:id="@+id/textView_user_id"
            android:hint="user_id"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textAlignment="viewStart"
            android:background="@drawable/input_background"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/user_id"/>



        <TextView
            android:id="@+id/e_number"
            android:text="Emergency No"
            android:textColor="@color/text"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView_user_id"/>



        <TextView
            android:id="@+id/textView_e_phone"
            android:hint="emergency no"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textAlignment="viewStart"
            android:background="@drawable/input_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/e_number"/>


    </LinearLayout>





    <Button
        android:id="@+id/edit"
        android:onClick="edit"
        android:text="edit"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_button_gradient"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_below="@id/lLayout"/>

</RelativeLayout>