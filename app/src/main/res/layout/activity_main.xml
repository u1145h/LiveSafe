<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/BlackSPL"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/topLogo"
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:background="@drawable/img"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topLogo"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-100dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingBottom="30dp"
                android:text="ENTER YOUR DETAILS"
                android:fontFamily="@font/poppinsb"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/BlackSPL"
                android:layout_gravity="center_horizontal"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/name"
                    android:hint="Full Name"
                    android:textSize="17sp"
                    android:inputType="text"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/BlackSPL"
                    android:background="@drawable/input_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/emergNum"
                android:hint="Emergency Number"
                android:textSize="17sp"
                android:inputType="text"
                android:fontFamily="@font/poppinsr"
                android:textColor="@color/BlackSPL"
                android:background="@drawable/input_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/sign_up"
                android:text="Sign Up"
                android:onClick="sub"
                android:textSize="17sp"
                android:textColor="@color/textgrey"
                android:background="@drawable/round_button_gradient"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="@color/BlackSPL"
                android:fontFamily="@font/poppinsr"
                android:text="Turn on Mobile Data for better result"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>